### WordPress REST API
# Base REST API URL (no trailing slash). Exposed to the browser.
NEXT_PUBLIC_WORDPRESS_API_URL=
NEXT_PUBLIC_WPFORM_ID=
NEXT_PUBLIC_WP_AUTH_USER=
NEXT_PUBLIC_WP_AUTH_PASS=

# Credentials for authenticated REST calls (e.g., create/update content).
# Use a WordPress application password and matching user.
WORDPRESS_BASIC_AUTH_USER=your-wp-username
WORDPRESS_BASIC_AUTH_PASSWORD=your-application-password

# Shared secret for preview/draft routes in Next.js.
WORDPRESS_PREVIEW_SECRET=change-me
